<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="16dp">
    <ImageView
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:padding="3dp"
        android:layout_marginTop="-10dp"
        android:id="@+id/SampleDocumentImage"
        android:src="@drawable/location1r"
        android:layout_alignParentLeft="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Titolo"
        android:textSize="27dp"
        android:id="@+id/nomeEvento"
        android:textColor="#37474f"
        android:layout_toRightOf="@id/SampleDocumentImage"
        android:paddingLeft="20dp"
        android:maxLines="1"
        android:ellipsize="end" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="descrizione"
        android:layout_toRightOf="@+id/SampleDocumentImage"
        android:paddingLeft="26dp"
        android:id="@+id/descrizioneEvento"
        android:layout_marginTop="-12dp"
        android:layout_below="@id/nomeEvento"
        />
</RelativeLayout>